@model tesla.Models.Order

@{
    ViewBag.Title = "CheckoutDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    @if (Session["cart"] == null)
    {
        <div class="flex items-center justify-center gap-2  text-lg mt-40">
            <p class="mt-30">Cart is Empty!</p>
            <ImSad></ImSad>
            <a href="@Url.Action("Index", "Cars")" type="submit"
               class=" ml-20 w-200 bg-indigo-600 border border-transparent rounded-md shadow-sm py-3 px-4 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-50 focus:ring-indigo-500">
                Shop Now!
            </a>
        </div>

    }
    else
    {
      
       <!-- Cart Page  -->
            <div class="bg-white">
                <div class="max-w-2xl mx-auto pt-16 pb-24 px-4 sm:px-6 lg:max-w-7xl lg:px-8">
                    <h1 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
                        Cart
                    </h1>
                    <form class="mt-12 lg:grid lg:grid-cols-12 lg:gap-x-12 lg:items-start xl:gap-x-16">
                        <section aria-labelledby="cart-heading" class="lg:col-span-7">
                            <h2 id="cart-heading" class="sr-only">
                                Items in your shopping cart
                            </h2>
                            @{
                                int Total = 0;
                            }
@foreach (CartItem item in (List<CartItem>)Session["cart"])
{
    int lineTotal = Convert.ToInt32(item.Quantity * item.Car.price);
    Total = Convert.ToInt32(@Total + lineTotal);

    Session["SesTotal"] = Total;

    <ul role="list" class="border-t border-b border-gray-200 divide-y divide-gray-200">
        <!-- List of products -->
        <li key="@item.Car.id"
            class="flex py-6 sm:py-10">
            <div class="flex-shrink-0">
                <img src="@Url.Content(String.Format("~/Content/images/{0}/{1}", "cars", item.Car.img))" alt="Model S" class="w-24 h-24 rounded-md object-center object-cover sm:w-48 sm:h-48" />
            </div>

            <div class="ml-4 flex-1 flex flex-col justify-between sm:ml-6">
                <div class="relative pr-9 flex sm:flex-row flex-col sm:gap-x-6 sm:pr-0">
                    <div>
                        <div class="flex justify-between">
                            <h3 class="text-sm">
                                <a class="font-medium text-gray-700 hover:text-gray-800">
                                    @item.Car.title
                                </a>
                            </h3>
                        </div>
                        <div class="mt-1 flex text-sm">
                            <p class="text-gray-500 mt-1 text-sm font-medium text-gray-900">
                                @item.Car.description
                            </p>
                        </div>
                        <p class="mt-1 text-sm font-medium text-gray-900">
                            @("R" + Total)
                        </p>
                    </div>

                    <div class="mt-4  ml-auto mr-12 ">
                        <div class="absolute top-0 right-0">
                            <a href="@Url.Action("AddToCart", "ShoppingCart", new {@class="-m-2 p-2 inline-flex text-gray-400 hover:text-gray-500", productId = item.Car.id, url="CheckoutDetails" })">
                                <span class="glyphicon glyphicon-plus">
                                    +
                                </span>
                            </a>
                            <a href="@Url.Action("DecreaseQty", "ShoppingCart", new { productId = item.Car.id, url="CheckoutDetails" })">
                                <span class="glyphicon glyphicon-minus">
                                    -
                                </span>
                            </a>
                            <a href="@Url.Action("RemoveFromCart", "ShoppingCart", new {@class="-m-2 p-2 inline-flex text-gray-400 hover:text-gray-500", productId = item.Car.id, url="CheckoutDetails" })">
                                <span class="glyphicon glyphicon-plus">
                                    x
                                </span>
                            </a>
                        </div>
                    </div>
                    
                </div>

                <p class="mt-4 flex text-sm text-gray-700 space-x-2">
                  
                    <CheckIcon class="flex-shrink-0 h-5 w-5 text-green-500"
                               aria-hidden="true" />
                    <ClockIcon class="flex-shrink-0 h-5 w-5 text-gray-300"
                               aria-hidden="true" />
                </p>
                @*@(Model.C.inStock ? "" : "Out Of Stock!"*@
            </div>
        </li>

    </ul>
}
                          
                        </section>
                    </form>
              <div class="flex">
                  <a href="@Url.Action("Index", "Cars")" type="submit"
                     class=" ml-20 w-200 bg-black border border-transparent rounded-md shadow-sm py-3 px-4 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-50 focus:ring-indigo-500">
                      Shop Now!
                  </a>
                  <a href="@Url.Action("Create","Orders")" type="submit"
                     class=" ml-20 w-200 bg-black border border-transparent rounded-md shadow-sm py-3 px-4 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-50 focus:ring-indigo-500">
                      Checkout
                  </a>
              </div>
                </div>
            </div>
            }
           