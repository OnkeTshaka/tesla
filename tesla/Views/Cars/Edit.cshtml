@model tesla.Models.Car

@{
    ViewBag.Title = "Edit";
}

<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Update car into inventory
        </h2>
    </div>
    @using (Html.BeginForm("Edit", "Cars", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md"
             onSubmit="">
            @Html.ValidationSummary(true, "", new { @class = "text-red-500" })
            @Html.HiddenFor(m => m.id)
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                <div class="space-y-6">
                    <div>
                        @Html.LabelFor(m => m.title, new { @htmlFor = "email", @class = "block text-sm font-medium text-gray-700" })
                        <div class="mt-1">
                            @Html.TextBoxFor(m => m.title, new { @class = "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" })
                            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-red-500" })
                        </div>
                    </div>
                    <div>
                        @Html.LabelFor(m => m.description, new { @htmlFor = "email", @class = "block text-sm font-medium text-gray-700" })
                        <div class="mt-1">
                            @Html.TextBoxFor(m => m.description, new { @class = "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" })
                            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-red-500" })
                        </div>
                    </div>
                    <div>
                        @Html.LabelFor(m => m.price, new { @htmlFor = "email", @class = "block text-sm font-medium text-gray-700" })
                        <div class="mt-1">
                            @Html.TextBoxFor(m => m.price, new { @class = "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" })
                            @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-red-500" })
                        </div>
                    </div>
                    <div>
                        @Html.LabelFor(m => m.img, new { @htmlFor = "email", @class = "block text-sm font-medium text-gray-700" })
                        <div class="mt-1">
                            <input type="file" name="imageFile" id="imageFile" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                            @Html.ValidationMessageFor(model => model.img, "", new { @class = "text-red-500" })
                        </div>
                    </div>
                    <div>
                        @Html.LabelFor(m => m.quanitity, new { @htmlFor = "email", @class = "block text-sm font-medium text-gray-700" })
                        <div class="mt-1">
                            @Html.TextBoxFor(m => m.quanitity, new { @class = "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" })
                            @Html.ValidationMessageFor(model => model.quanitity, "", new { @class = "text-red-500" })
                        </div>
                    </div>
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            @Html.CheckBoxFor(m => m.inStock, new { @class = "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" })
                            @Html.LabelFor(m => m.inStock, new { @class = "ml-2 block text-sm text-gray-900" })
                        </div>

                    </div>
                    <div>
                        <input type="submit" value="Create" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    </div>
                </div>
                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    }
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


